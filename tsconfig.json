/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    /* === Global strictness & safety === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* === Modern JS/TS targets === */
    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* === Angular & decorators === */
    "experimentalDecorators": true,

    /* === Source & helpers === */
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,

    /* === Module resolution === */
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "global-error-handler-lib": [
        "./dist/global-error-handler-lib"
      ],
      "seed-common-lib": [
        "./dist/seed-common-lib"
      ]
    },

    /* === Libs & type-checking speed === */
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "references": [
    {
      "path": "./projects/global-error-handler-lib/tsconfig.lib.json"
    },
    {
      "path": "./projects/global-error-handler-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/seed-common-lib/tsconfig.spec.json"
    },
    {
      "path": "./projects/seed-app/tsconfig.spec.json"
    }
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
