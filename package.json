{
  "name": "angular-seed",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:seed-app": "vitest run projects/seed-app",
    "test:seed-common-lib": "vitest run projects/seed-common-lib",
    "test:global-error-handler-lib": "vitest run projects/global-error-handler-lib",
    "build-libs": "ng build seed-common-lib --configuration production && ng build global-error-handler-lib --configuration production",
    "build:seed-common-lib": "ng build seed-common-lib --configuration production",
    "build:seed-common-lib:dev": "ng build seed-common-lib --configuration development",
    "build:global-error-handler-lib": "ng build global-error-handler-lib --configuration production",
    "build:global-error-handler-lib:dev": "ng build global-error-handler-lib --configuration development",
    "build-app": "ng build --project seed-app --configuration production --aot --base-href /angular-seed/",
    "gitbuild": "npm run build-libs && npm run build-app",
    "gitdeploy": "gh-pages -d dist",
    "lint": "ng lint",
    "lint:all": "npm run lint:seed-app && npm run lint:seed-common-lib && npm run lint:global-error-handler-lib",
    "lint:seed-app": "ng lint seed-app",
    "lint:seed-common-lib": "ng lint seed-common-lib",
    "lint:global-error-handler-lib": "ng lint global-error-handler-lib",
    "format": "prettier --write \"**/*.{ts,html,css,scss}\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/typography": "^0.5.15",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.1.1",
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular-eslint/builder": "20.0.0-alpha.1",
    "@angular-eslint/eslint-plugin": "20.0.0-alpha.1",
    "@angular-eslint/eslint-plugin-template": "20.0.0-alpha.1",
    "@angular-eslint/schematics": "20.0.0-alpha.1",
    "@angular-eslint/template-parser": "20.0.0-alpha.1",
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "angular-eslint": "20.0.0-alpha.1",
    "autoprefixer": "^10.4.20",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "find-cache-directory": "^6.0.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^24.1.3",
    "ng-packagr": "^20.0.0",
    "postcss": "^8.5.4",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.33.0",
    "vitest": "^3.2.4"
  }
}
